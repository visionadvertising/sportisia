# Proxy pentru API requests către backend Node.js
<IfModule mod_rewrite.c>
  RewriteEngine On
  
  # Proxy pentru /api/* către backend Node.js pe localhost:3001
  RewriteCond %{REQUEST_URI} ^/api/
  RewriteRule ^api/(.*)$ http://localhost:3001/api/$1 [P,L]
  
  # Serve static files pentru Vite
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ /index.html [L]
</IfModule>

# Enable proxy module (necesar pentru mod_rewrite cu [P])
<IfModule mod_proxy.c>
  ProxyPreserveHost On
  ProxyRequests Off
</IfModule>
